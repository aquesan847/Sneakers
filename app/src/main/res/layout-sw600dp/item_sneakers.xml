<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgSneakers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/contentDescription_logo"
        android:maxHeight="288dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSneakersNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvSneakersName"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toStartOf="@+id/tvSneakersName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSneakers" />

    <TextView
        android:id="@+id/tvSneakersName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvSneakersName"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSneakersNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/imgSneakers" />

    <TextView
        android:id="@+id/tvSneakersBrandTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvSneakersBrand"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toStartOf="@+id/tvSneakersBrand"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSneakersNameTitle" />

    <TextView
        android:id="@+id/tvSneakersBrand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvSneakersBrand"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSneakersBrandTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSneakersName" />

    <TextView
        android:id="@+id/tvSneakersSizeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvSneakersSize"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toStartOf="@+id/tvSneakersSize"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSneakersBrand" />

    <TextView
        android:id="@+id/tvSneakersSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:text="@string/tvSneakersSize"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toStartOf="@+id/tvSneakersBuyDateTitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSneakersSizeTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSneakersBrand" />

    <TextView
        android:id="@+id/tvSneakersBuyDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvSneakersBuyDate"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toStartOf="@+id/tvSneakersBuyDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSneakersSize"
        app:layout_constraintTop_toBottomOf="@+id/tvSneakersBrand" />

    <TextView
        android:id="@+id/tvSneakersBuyDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvSneakersBuyDate"
        android:textSize="@dimen/text_size_tablet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSneakersBuyDateTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSneakersBrand" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/color_secondary"
        app:layout_constraintBottom_toTopOf="@+id/imgSneakers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>